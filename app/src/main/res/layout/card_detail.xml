<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Top bar -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingBottom="8dp">

            <ImageView
                android:id="@+id/ivClose"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/ic_close"
                android:padding="4dp"
                android:contentDescription="Close" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_marginStart="12dp">

                <!-- Task Title - Bold -->
                <EditText
                    android:id="@+id/etTaskTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Task Title"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/black"
                    android:background="@android:color/transparent"
                    android:hint="Enter task title"
                    android:inputType="text"
                    android:maxLines="2" />

                <!-- Board Name - Gray text below -->
                <TextView
                    android:id="@+id/tvBoardName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:text="In Board Name"
                    android:textSize="14sp"
                    android:textColor="#888888" />
            </LinearLayout>
        </LinearLayout>

        <!-- Removed old RadioButton completely -->
        <!-- Removed Status block -->

        <!-- Quick Actions -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Quick Actions"
            android:textStyle="bold"
            android:textSize="16sp"
            android:paddingBottom="8dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2"
            android:layout_marginTop="8dp">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnMembers"
                style="@style/SquareOutlinedButton"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:text="Assign Task"
                app:icon="@drawable/acc_icon" />

            <View
                android:layout_width="8dp"
                android:layout_height="match_parent" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnAddAttachment"
                style="@style/SquareOutlinedButton"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:text="Add Attachment"
                app:icon="@drawable/pin_svg" />
        </LinearLayout>

        <!-- Second row of Quick Actions -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2"
            android:layout_marginTop="8dp">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnAddComment"
                style="@style/SquareOutlinedButton"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:text="Add Comment"
                app:icon="@drawable/ib_icon" />

            <View
                android:layout_width="8dp"
                android:layout_height="match_parent" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnDeleteTask"
                style="@style/SquareOutlinedButton"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:text="Delete Task"
                android:textColor="#F44336"
                app:iconTint="#F44336"
                app:icon="@drawable/trash_icon" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Description"
                android:textSize="16sp"
                android:textStyle="bold"
                android:minWidth="100dp"
                android:layout_margin="8dp"/>

            <EditText
                android:id="@+id/etDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:background="@android:drawable/edit_text"
                android:hint="Enter description"
                android:padding="8dp"
                android:minHeight="48dp" />
        </LinearLayout>

        <!-- Date pickers -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="12dp">

            <!-- Start Date Card -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardElevation="2dp"
                app:cardCornerRadius="8dp"
                android:layout_marginBottom="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:padding="12dp">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/clock_ic"
                        app:tint="#4CAF50" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginStart="12dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Start Date"
                            android:textSize="12sp"
                            android:textColor="#888888" />

                        <EditText
                            android:id="@+id/etDateStart"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@android:color/transparent"
                            android:hint="Select start date"
                            android:textSize="16sp"
                            android:textColor="@android:color/black"
                            android:focusable="false"
                            android:clickable="true"
                            android:inputType="none" />
                    </LinearLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Due Date Card -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardElevation="2dp"
                app:cardCornerRadius="8dp"
                android:layout_marginBottom="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:padding="12dp">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/square_ic"
                        app:tint="#FF5722" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginStart="12dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Due Date"
                            android:textSize="12sp"
                            android:textColor="#888888" />

                        <EditText
                            android:id="@+id/etDueDate"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@android:color/transparent"
                            android:hint="Select due date"
                            android:textSize="16sp"
                            android:textColor="@android:color/black"
                            android:focusable="false"
                            android:clickable="true"
                            android:inputType="none" />
                    </LinearLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Timer Card -->
<!--            <com.google.android.material.card.MaterialCardView-->
<!--                android:layout_width="match_parent"-->
<!--                android:layout_height="wrap_content"-->
<!--                app:cardElevation="2dp"-->
<!--                app:cardCornerRadius="8dp">-->

<!--                <LinearLayout-->
<!--                    android:layout_width="match_parent"-->
<!--                    android:layout_height="wrap_content"-->
<!--                    android:orientation="horizontal"-->
<!--                    android:gravity="center_vertical"-->
<!--                    android:padding="12dp">-->

<!--                    <ImageView-->
<!--                        android:layout_width="24dp"-->
<!--                        android:layout_height="24dp"-->
<!--                        android:src="@drawable/clock_ic"-->
<!--                        android:tint="#2196F3" />-->

<!--                    <LinearLayout-->
<!--                        android:layout_width="0dp"-->
<!--                        android:layout_weight="1"-->
<!--                        android:layout_height="wrap_content"-->
<!--                        android:orientation="vertical"-->
<!--                        android:layout_marginStart="12dp">-->

<!--                        <TextView-->
<!--                            android:layout_width="wrap_content"-->
<!--                            android:layout_height="wrap_content"-->
<!--                            android:text="Timer"-->
<!--                            android:textSize="12sp"-->
<!--                            android:textColor="#888888" />-->

<!--                        <TextView-->
<!--                            android:id="@+id/tvTimer"-->
<!--                            android:layout_width="wrap_content"-->
<!--                            android:layout_height="wrap_content"-->
<!--                            android:text="00:00:00"-->
<!--                            android:textSize="16sp"-->
<!--                            android:textColor="@android:color/black" />-->
<!--                    </LinearLayout>-->

<!--                    <ImageButton-->
<!--                        android:id="@+id/btnPlay"-->
<!--                        android:layout_width="40dp"-->
<!--                        android:layout_height="40dp"-->
<!--                        android:background="?attr/selectableItemBackgroundBorderless"-->
<!--                        android:src="@drawable/ic_play"-->
<!--                        android:scaleType="fitCenter"-->
<!--                        android:contentDescription="Play/Pause timer" />-->
<!--                </LinearLayout>-->
<!--            </com.google.android.material.card.MaterialCardView>-->
        </LinearLayout>

        <!-- Members Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="16dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Members"
                android:gravity="center_vertical"
                android:textStyle="bold"
                android:textSize="18sp"
                android:textColor="@android:color/black"
                android:drawableStart="@drawable/acc_icon"
                android:drawablePadding="8dp"
                android:layout_marginBottom="8dp"/>

            <!-- Members list will be populated dynamically -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvMembers"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:visibility="gone"/>

            <TextView
                android:id="@+id/tvNoMembers"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="No members assigned"
                android:textSize="12sp"
                android:textColor="#888888"
                android:padding="8dp"/>
        </LinearLayout>

        <!-- Todolist Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="16dp">

            <TextView
                android:id="@+id/tvTodolistHeader"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Todolist"
                android:textStyle="bold"
                android:textSize="14sp"
                android:textColor="@android:color/black"
                android:padding="12dp"
                android:background="?attr/selectableItemBackground"
                android:clickable="true"
                android:focusable="true"/>

            <!-- Todolist items - expandable -->
            <LinearLayout
                android:id="@+id/llTodolistContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone"
                android:background="#F8F8F8"
                android:padding="8dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="No todolist items"
                    android:textSize="12sp"
                    android:textColor="#888888"/>
            </LinearLayout>
        </LinearLayout>

        <!-- Attachment Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="8dp">

            <TextView
                android:id="@+id/tvAttachmentHeader"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Attachment"
                android:textStyle="bold"
                android:textSize="14sp"
                android:textColor="@android:color/black"
                android:padding="12dp"
                android:background="?attr/selectableItemBackground"
                android:clickable="true"
                android:focusable="true"/>

            <!-- Attachment items - expandable -->
            <LinearLayout
                android:id="@+id/llAttachmentContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone"
                android:background="#F8F8F8"
                android:padding="8dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="No attachments"
                    android:textSize="12sp"
                    android:textColor="#888888"/>
            </LinearLayout>
        </LinearLayout>

        <!-- Comments Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="8dp">

            <TextView
                android:id="@+id/tvCommentsHeader"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Comments"
                android:textStyle="bold"
                android:textSize="14sp"
                android:textColor="@android:color/black"
                android:padding="12dp"
                android:background="?attr/selectableItemBackground"
                android:clickable="true"
                android:focusable="true"/>

            <!-- Comments container - expandable, will be populated dynamically -->
            <LinearLayout
                android:id="@+id/llCommentsContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone"
                android:background="#F8F8F8"
                android:padding="8dp">

                <!-- No comments placeholder -->
                <TextView
                    android:id="@+id/tvNoComments"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="No comments yet"
                    android:textSize="12sp"
                    android:textColor="#888888"
                    android:padding="8dp"
                    android:gravity="center"/>
            </LinearLayout>
        </LinearLayout>

        <!-- Confirm Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnConfirm"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="16dp"
            android:text="Add Card"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            app:cornerRadius="8dp"
            app:backgroundTint="#4CAF50" />
    </LinearLayout>
</ScrollView>
