<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto" 
    android:layout_width="match_parent" 
    android:layout_height="match_parent" 
    android:background="#F5F5F5" 
    android:fillViewport="true">

    <LinearLayout 
        android:layout_width="match_parent" 
        android:layout_height="wrap_content" 
        android:orientation="vertical">

        <!-- Top Header Card -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardElevation="2dp"
            app:cardCornerRadius="0dp"
            android:layout_marginBottom="8dp"
            app:cardBackgroundColor="@android:color/white">
            
            <LinearLayout 
                android:layout_width="match_parent" 
                android:layout_height="wrap_content" 
                android:orientation="vertical"
                android:padding="20dp">

                <!-- Top bar with close button -->
                <LinearLayout 
                    android:layout_width="match_parent" 
                    android:layout_height="wrap_content" 
                    android:orientation="horizontal" 
                    android:gravity="center_vertical">

                    <ImageView 
                        android:id="@+id/ivClose" 
                        android:layout_width="36dp" 
                        android:layout_height="36dp" 
                        android:src="@drawable/ic_close" 
                        android:padding="6dp" 
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:contentDescription="Close" />

                    <View
                        android:layout_width="0dp"
                        android:layout_height="1dp"
                        android:layout_weight="1"/>

                </LinearLayout>

                <!-- Task Title - Bold -->
                <EditText 
                    android:id="@+id/etTaskTitle" 
                    android:layout_width="match_parent" 
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Task Title" 
                    android:textSize="24sp" 
                    android:textStyle="bold" 
                    android:textColor="#212121" 
                    android:background="@android:color/transparent" 
                    android:hint="Enter task title" 
                    android:inputType="textCapSentences|textMultiLine" 
                    android:maxLines="3"
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp" />

                <!-- Board Name - Gray text below -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginTop="4dp">
                    
                    <TextView 
                        android:id="@+id/tvBoardName" 
                        android:layout_width="wrap_content" 
                        android:layout_height="wrap_content" 
                        android:layout_marginStart="6dp"
                        android:text="In Board Name" 
                        android:textSize="13sp" 
                        android:textColor="#888888" />
                </LinearLayout>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Quick Actions Card -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardElevation="2dp"
            app:cardCornerRadius="12dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="8dp"
            app:cardBackgroundColor="@android:color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView 
                    android:layout_width="match_parent" 
                    android:layout_height="wrap_content" 
                    android:text="Quick Actions" 
                    android:textStyle="bold" 
                    android:textSize="16sp"
                    android:textColor="#212121"
                    android:paddingBottom="12dp"/>

                <!-- Quick Actions Buttons -->
                <com.google.android.material.button.MaterialButton 
                    android:id="@+id/btnMembers" 
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    android:layout_width="match_parent" 
                    android:layout_height="56dp" 
                    android:text="Assign Task" 
                    android:textSize="13sp"
                    app:icon="@drawable/acc_icon"
                    app:cornerRadius="8dp"
                    app:strokeColor="#E0E0E0" />

                <com.google.android.material.button.MaterialButton 
                    android:id="@+id/btnDeleteTask" 
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    android:layout_width="match_parent" 
                    android:layout_height="56dp" 
                    android:layout_marginTop="8dp"
                    android:text="Delete Task" 
                    android:textSize="13sp"
                    android:textColor="#F44336" 
                    app:iconTint="#F44336" 
                    app:icon="@drawable/trash_icon"
                    app:cornerRadius="8dp"
                    app:strokeColor="#FFCDD2" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Description Card -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardElevation="2dp"
            app:cardCornerRadius="12dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="8dp"
            app:cardBackgroundColor="@android:color/white">

            <LinearLayout 
                android:layout_width="match_parent" 
                android:layout_height="wrap_content" 
                android:orientation="vertical"
                android:padding="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingBottom="8dp">
                    
                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_description"
                        app:tint="#666666"/>

                    <TextView 
                        android:layout_width="wrap_content" 
                        android:layout_height="wrap_content" 
                        android:text="Description" 
                        android:textSize="16sp" 
                        android:textStyle="bold"
                        android:textColor="#212121"
                        android:layout_marginStart="8dp"/>
                </LinearLayout>

                <EditText 
                    android:id="@+id/etDescription" 
                    android:layout_width="match_parent" 
                    android:layout_height="wrap_content" 
                    android:background="@android:drawable/edit_text" 
                    android:hint="Enter description" 
                    android:padding="12dp" 
                    android:minHeight="100dp"
                    android:gravity="top"
                    android:inputType="textMultiLine|textCapSentences"
                    android:maxLines="10" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Date pickers Card -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardElevation="2dp"
            app:cardCornerRadius="12dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="8dp"
            app:cardBackgroundColor="@android:color/white">

            <LinearLayout 
                android:layout_width="match_parent" 
                android:layout_height="wrap_content" 
                android:orientation="vertical"
                android:padding="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingBottom="12dp">
                    
                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/clock_ic"
                        app:tint="#666666"/>

                    <TextView 
                        android:layout_width="wrap_content" 
                        android:layout_height="wrap_content" 
                        android:text="Timeline" 
                        android:textSize="16sp" 
                        android:textStyle="bold"
                        android:textColor="#212121"
                        android:layout_marginStart="8dp"/>
                </LinearLayout>

                <!-- Start Date -->
                <LinearLayout 
                    android:layout_width="match_parent" 
                    android:layout_height="wrap_content" 
                    android:orientation="horizontal" 
                    android:gravity="center_vertical"
                    android:background="?attr/selectableItemBackground"
                    android:padding="12dp"
                    android:layout_marginBottom="8dp">

                    <ImageView 
                        android:layout_width="24dp" 
                        android:layout_height="24dp" 
                        android:src="@drawable/clock_ic" 
                        app:tint="#4CAF50" />

                    <LinearLayout 
                        android:layout_width="0dp" 
                        android:layout_weight="1" 
                        android:layout_height="wrap_content" 
                        android:orientation="vertical" 
                        android:layout_marginStart="12dp">

                        <TextView 
                            android:layout_width="wrap_content" 
                            android:layout_height="wrap_content" 
                            android:text="Start Date" 
                            android:textSize="12sp" 
                            android:textColor="#888888" />

                        <EditText 
                            android:id="@+id/etDateStart" 
                            android:layout_width="match_parent" 
                            android:layout_height="wrap_content" 
                            android:background="@android:color/transparent" 
                            android:hint="Select start date" 
                            android:textSize="15sp" 
                            android:textColor="#212121"
                            android:textStyle="bold" 
                            android:focusable="false" 
                            android:clickable="true" 
                            android:inputType="none"
                            android:paddingTop="4dp" />
                    </LinearLayout>
                </LinearLayout>

                <!-- Due Date -->
                <LinearLayout 
                    android:layout_width="match_parent" 
                    android:layout_height="wrap_content" 
                    android:orientation="horizontal" 
                    android:gravity="center_vertical"
                    android:background="?attr/selectableItemBackground"
                    android:padding="12dp">

                    <ImageView 
                        android:layout_width="24dp" 
                        android:layout_height="24dp" 
                        android:src="@drawable/square_ic" 
                        app:tint="#FF5722" />

                    <LinearLayout 
                        android:layout_width="0dp" 
                        android:layout_weight="1" 
                        android:layout_height="wrap_content" 
                        android:orientation="vertical" 
                        android:layout_marginStart="12dp">

                        <TextView 
                            android:layout_width="wrap_content" 
                            android:layout_height="wrap_content" 
                            android:text="Due Date" 
                            android:textSize="12sp" 
                            android:textColor="#888888" />

                        <EditText 
                            android:id="@+id/etDueDate" 
                            android:layout_width="match_parent" 
                            android:layout_height="wrap_content" 
                            android:background="@android:color/transparent" 
                            android:hint="Select due date" 
                            android:textSize="15sp" 
                            android:textColor="#212121"
                            android:textStyle="bold" 
                            android:focusable="false" 
                            android:clickable="true" 
                            android:inputType="none"
                            android:paddingTop="4dp" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Calendar Sync Section -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardElevation="2dp"
            app:cardCornerRadius="12dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="8dp"
            app:cardBackgroundColor="#E8F5E9">

            <LinearLayout 
                android:id="@+id/calendarSyncSection" 
                android:layout_width="match_parent" 
                android:layout_height="wrap_content" 
                android:orientation="vertical" 
                android:padding="16dp">

                <LinearLayout 
                    android:layout_width="match_parent" 
                    android:layout_height="wrap_content" 
                    android:orientation="horizontal" 
                    android:gravity="center_vertical">

                    <ImageView 
                        android:id="@+id/ivCalendarIcon" 
                        android:layout_width="28dp" 
                        android:layout_height="28dp" 
                        android:src="@drawable/ic_google_calendar" 
                        android:contentDescription="Google Calendar Icon"/>

                    <TextView 
                        android:id="@+id/tvCalendarSyncStatus" 
                        android:layout_width="0dp" 
                        android:layout_height="wrap_content" 
                        android:layout_weight="1" 
                        android:layout_marginStart="12dp" 
                        android:text="@string/sync_with_google_calendar" 
                        android:textSize="15sp" 
                        android:textStyle="bold" 
                        android:textColor="#2E7D32"/>

                    <com.google.android.material.switchmaterial.SwitchMaterial 
                        android:id="@+id/switchCalendarSync" 
                        android:layout_width="wrap_content" 
                        android:layout_height="wrap_content" 
                        android:checked="false"
                        app:thumbTint="@android:color/white"
                        app:trackTint="#4CAF50"/>
                </LinearLayout>

                <LinearLayout 
                    android:id="@+id/layoutCalendarDetails" 
                    android:layout_width="match_parent" 
                    android:layout_height="wrap_content" 
                    android:orientation="vertical" 
                    android:layout_marginTop="12dp" 
                    android:visibility="gone">

                    <TextView 
                        android:id="@+id/tvCalendarEventInfo" 
                        android:layout_width="wrap_content" 
                        android:layout_height="wrap_content" 
                        android:textSize="13sp" 
                        android:textColor="#555555" 
                        android:lineSpacingExtra="4dp" 
                        android:text="ðŸ“… Sá»± kiá»‡n sáº½ Ä‘Æ°á»£c táº¡o khi lÆ°u task"/>

                    <com.google.android.material.button.MaterialButton 
                        android:id="@+id/btnViewInCalendar" 
                        android:layout_width="wrap_content" 
                        android:layout_height="40dp" 
                        android:layout_marginTop="8dp" 
                        android:text="@string/view_in_calendar" 
                        android:textSize="13sp" 
                        android:backgroundTint="#C8E6C9" 
                        android:textColor="#1B5E20" 
                        style="@style/Widget.MaterialComponents.Button.TextButton" 
                        app:icon="@drawable/ic_open_in_new" 
                        app:iconTint="#1B5E20" 
                        app:iconSize="18dp" 
                        android:visibility="gone"/>
                </LinearLayout>

                <com.google.android.material.button.MaterialButton 
                    android:id="@+id/btnCalendarSyncSettings" 
                    android:layout_width="match_parent" 
                    android:layout_height="wrap_content" 
                    android:layout_marginTop="12dp" 
                    android:text="@string/calendar_reminder_settings" 
                    android:textSize="14sp"
                    android:textColor="#2E7D32" 
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton" 
                    app:icon="@drawable/ic_sync" 
                    app:iconTint="#2E7D32"
                    app:strokeColor="#4CAF50"
                    app:cornerRadius="8dp"/>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Labels Section Card -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardElevation="2dp"
            app:cardCornerRadius="12dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="8dp"
            app:cardBackgroundColor="@android:color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <LinearLayout 
                    android:id="@+id/labelLayout" 
                    android:layout_width="match_parent" 
                    android:layout_height="wrap_content" 
                    android:orientation="horizontal" 
                    android:gravity="center_vertical"
                    android:background="?attr/selectableItemBackground" 
                    android:clickable="true" 
                    android:focusable="true"
                    android:paddingTop="4dp"
                    android:paddingBottom="12dp">

                    <ImageView 
                        android:layout_width="20dp" 
                        android:layout_height="20dp" 
                        android:src="@drawable/ic_label"
                        app:tint="#666666" 
                        android:scaleType="fitCenter" />

                    <TextView 
                        android:layout_width="0dp" 
                        android:layout_height="wrap_content" 
                        android:layout_weight="1" 
                        android:text="Labels" 
                        android:textStyle="bold" 
                        android:textSize="16sp" 
                        android:textColor="#212121" 
                        android:layout_marginStart="8dp"/>

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="wrap_content"
                        android:src="@drawable/add_ic"
                        app:tint="#666666" />

                </LinearLayout>

                <!-- Selected Labels Display -->
                <HorizontalScrollView 
                    android:id="@+id/scrollViewLabels" 
                    android:layout_width="match_parent" 
                    android:layout_height="wrap_content" 
                    android:scrollbars="none" 
                    android:visibility="gone">

                    <LinearLayout 
                        android:id="@+id/layoutSelectedLabels" 
                        android:layout_width="wrap_content" 
                        android:layout_height="wrap_content" 
                        android:orientation="horizontal" 
                        android:padding="4dp"/>
                </HorizontalScrollView>

                <TextView 
                    android:id="@+id/tvNoLabels" 
                    android:layout_width="match_parent" 
                    android:layout_height="wrap_content" 
                    android:text="No labels" 
                    android:textSize="13sp" 
                    android:textColor="#999999" 
                    android:paddingTop="4dp"
                    android:paddingBottom="4dp"
                    android:visibility="gone"/>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Checklist Section Card -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardElevation="2dp"
            app:cardCornerRadius="12dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="8dp"
            app:cardBackgroundColor="@android:color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <LinearLayout 
                    android:layout_width="match_parent" 
                    android:layout_height="wrap_content" 
                    android:orientation="horizontal" 
                    android:gravity="center_vertical"
                    android:paddingBottom="8dp">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_checklist"
                        app:tint="#666666"/>

                    <TextView 
                        android:layout_width="0dp" 
                        android:layout_height="wrap_content" 
                        android:layout_weight="1" 
                        android:text="Checklist" 
                        android:textStyle="bold" 
                        android:textSize="16sp" 
                        android:textColor="#212121"
                        android:layout_marginStart="8dp"/>

                    <ImageView 
                        android:id="@+id/ivAddChecklist" 
                        android:layout_width="28dp" 
                        android:layout_height="28dp" 
                        android:src="@drawable/add_ic"
                        android:padding="4dp"
                        android:background="?attr/selectableItemBackgroundBorderless" 
                        android:scaleType="fitCenter"
                        app:tint="#4CAF50" 
                        android:contentDescription="Add checklist item"/>
                </LinearLayout>

                <!-- RecyclerView for Checklist -->
                <androidx.recyclerview.widget.RecyclerView 
                    android:id="@+id/rvChecklist" 
                    android:layout_width="match_parent" 
                    android:layout_height="wrap_content" 
                    android:orientation="vertical" 
                    android:nestedScrollingEnabled="false" 
                    android:visibility="gone"/>

                <TextView 
                    android:id="@+id/tvNoChecklist" 
                    android:layout_width="match_parent" 
                    android:layout_height="wrap_content" 
                    android:text="No checklist items" 
                    android:textSize="13sp" 
                    android:textColor="#999999" 
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp"
                    android:gravity="center"/>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Comments Section Card -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardElevation="2dp"
            app:cardCornerRadius="12dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="8dp"
            app:cardBackgroundColor="@android:color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <LinearLayout 
                    android:layout_width="match_parent" 
                    android:layout_height="wrap_content" 
                    android:orientation="horizontal" 
                    android:gravity="center_vertical"
                    android:paddingBottom="12dp">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_comment"
                        app:tint="#666666"/>

                    <TextView 
                        android:layout_width="0dp" 
                        android:layout_weight="1" 
                        android:layout_height="wrap_content" 
                        android:text="Comments" 
                        android:textStyle="bold" 
                        android:textSize="16sp" 
                        android:textColor="#212121"
                        android:layout_marginStart="8dp"/>
                </LinearLayout>

                <!-- Comments Input -->
                <LinearLayout 
                    android:id="@+id/layoutCommentInput" 
                    android:layout_width="match_parent" 
                    android:layout_height="wrap_content" 
                    android:orientation="horizontal"
                    android:background="@android:drawable/edit_text"
                    android:padding="8dp" 
                    android:gravity="center_vertical"
                    android:layout_marginBottom="12dp">

                    <EditText 
                        android:id="@+id/etNewComment" 
                        android:layout_width="0dp" 
                        android:layout_weight="1" 
                        android:layout_height="wrap_content" 
                        android:hint="Write a comment..." 
                        android:minLines="1" 
                        android:maxLines="4" 
                        android:background="@android:color/transparent" 
                        android:padding="8dp"
                        android:textSize="14sp"
                        android:inputType="textMultiLine|textCapSentences"/>

                    <ImageButton 
                        android:id="@+id/btnSendComment" 
                        android:layout_width="40dp" 
                        android:layout_height="40dp" 
                        android:src="@drawable/ic_send" 
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:contentDescription="Send comment"
                        android:scaleType="centerInside"
                        android:padding="8dp"/>
                </LinearLayout>

                <!-- RecyclerView for Comments -->
                <androidx.recyclerview.widget.RecyclerView 
                    android:id="@+id/rvComments" 
                    android:layout_width="match_parent" 
                    android:layout_height="wrap_content" 
                    android:orientation="vertical" 
                    android:nestedScrollingEnabled="true"
                    android:maxHeight="300dp"/>

                <TextView 
                    android:id="@+id/tvNoComments" 
                    android:layout_width="match_parent" 
                    android:layout_height="wrap_content" 
                    android:text="No comments yet" 
                    android:textSize="13sp" 
                    android:textColor="#999999" 
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp" 
                    android:gravity="center"/>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Attachments Section Card -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardElevation="2dp"
            app:cardCornerRadius="12dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="16dp"
            app:cardBackgroundColor="@android:color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <LinearLayout 
                    android:layout_width="match_parent" 
                    android:layout_height="wrap_content" 
                    android:orientation="horizontal" 
                    android:gravity="center_vertical"
                    android:paddingBottom="8dp">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_attachment"
                        app:tint="#666666"/>

                    <TextView 
                        android:layout_width="0dp" 
                        android:layout_weight="1" 
                        android:layout_height="wrap_content" 
                        android:text="Attachments" 
                        android:textStyle="bold" 
                        android:textSize="16sp" 
                        android:textColor="#212121"
                        android:layout_marginStart="8dp"/>

                    <ImageView 
                        android:id="@+id/ivAddAttachment" 
                        android:layout_width="28dp" 
                        android:layout_height="28dp" 
                        android:src="@drawable/add_ic"
                        android:padding="4dp"
                        android:background="?attr/selectableItemBackgroundBorderless" 
                        android:scaleType="fitCenter"
                        app:tint="#4CAF50" 
                        android:contentDescription="Add attachment"/>
                </LinearLayout>

                <!-- RecyclerView for Attachments -->
                <androidx.recyclerview.widget.RecyclerView 
                    android:id="@+id/rvAttachments" 
                    android:layout_width="match_parent" 
                    android:layout_height="wrap_content" 
                    android:orientation="vertical" 
                    android:nestedScrollingEnabled="true"
                    android:maxHeight="300dp"/>

                <!-- Upload Progress Section -->
                <LinearLayout
                    android:id="@+id/layoutCardUploadProgress"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="8dp"
                    android:visibility="gone"
                    android:layout_marginTop="8dp">

                    <TextView
                        android:id="@+id/tvCardUploadProgress"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Uploading..."
                        android:textSize="14sp"
                        android:textColor="@android:color/black"/>

                    <ProgressBar
                        android:id="@+id/progressBarCardUpload"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:max="100"
                        android:progress="0"/>
                </LinearLayout>

                <TextView 
                    android:id="@+id/tvNoAttachments" 
                    android:layout_width="match_parent" 
                    android:layout_height="wrap_content" 
                    android:text="No attachments yet" 
                    android:textSize="13sp" 
                    android:textColor="#999999" 
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp" 
                    android:gravity="center"/>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Confirm Button -->
        <com.google.android.material.button.MaterialButton 
            android:id="@+id/btnConfirm" 
            android:layout_width="match_parent" 
            android:layout_height="56dp" 
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="24dp" 
            android:text="Save Changes" 
            android:textSize="16sp" 
            android:textStyle="bold" 
            android:textColor="@android:color/white"
