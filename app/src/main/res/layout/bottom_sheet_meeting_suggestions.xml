<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="vertical" android:background="#FFFFFF" android:padding="20dp">

    <!-- Header -->
    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="horizontal" android:gravity="center_vertical" android:layout_marginBottom="16dp">

<!--        <ImageView-->
<!--            android:layout_width="wrap_content"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:layout_marginEnd="8dp"-->
<!--            android:src="@drawable/ic_check_circle" />-->

        <TextView android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:text="@string/best_time_slots" android:textSize="18sp" android:textStyle="bold" android:textColor="#212121"/>

        <ImageButton android:id="@+id/btnClose" android:layout_width="40dp" android:layout_height="40dp" android:src="@android:drawable/ic_menu_close_clear_cancel" android:background="?attr/selectableItemBackgroundBorderless" android:contentDescription="@string/close"/>
    </LinearLayout>

    <!-- Info Card -->
    <com.google.android.material.card.MaterialCardView android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="16dp" app:cardBackgroundColor="#E3F2FD" app:cardElevation="0dp" app:cardCornerRadius="8dp">

<!--        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="horizontal" android:padding="12dp" android:gravity="center_vertical">-->

<!--            <ImageView android:layout_width="20dp" android:layout_height="20dp" android:src="@drawable/ic_info" android:layout_marginEnd="8dp"/>-->

<!--            <TextView android:id="@+id/tvParticipantsInfo" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:text="@string/participants_info_placeholder" android:textSize="13sp" android:textColor="#1565C0"/>-->
<!--        </LinearLayout>-->
    </com.google.android.material.card.MaterialCardView>

    <!-- Suggestions RecyclerView -->
    <androidx.recyclerview.widget.RecyclerView android:id="@+id/rvSuggestions" android:layout_width="match_parent" android:layout_height="wrap_content" android:maxHeight="400dp" android:scrollbars="vertical"/>

    <!-- Empty State -->
    <LinearLayout android:id="@+id/layoutEmptySuggestions" android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="vertical" android:gravity="center" android:padding="32dp" android:visibility="gone">

        <ImageView android:layout_width="80dp" android:layout_height="80dp" android:src="@drawable/ic_event" android:alpha="0.3" android:contentDescription="@string/no_slots"/>

        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="16dp" android:text="@string/no_available_slots" android:textSize="14sp" android:textColor="#757575" android:textAlignment="center"/>

        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="8dp" android:text="@string/try_adjusting_parameters" android:textSize="12sp" android:textColor="#9E9E9E" android:textAlignment="center"/>
    </LinearLayout>
</LinearLayout>
