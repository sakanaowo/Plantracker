<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="12dp">

    <TextView
        android:id="@+id/tvNoAttachmentsFragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="No attachments yet"
        android:visibility="gone"
        android:gravity="center"
        android:padding="8dp" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvAttachmentsFragment"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <!-- Upload Progress Section -->
    <LinearLayout
        android:id="@+id/layoutUploadProgress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="8dp"
        android:visibility="gone"
        android:layout_marginTop="8dp">

        <TextView
            android:id="@+id/tvUploadProgress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Uploading..."
            android:textSize="14sp"
            android:textColor="@android:color/black"/>

        <ProgressBar
            android:id="@+id/progressBarUpload"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            style="?android:attr/progressBarStyleHorizontal"
            android:max="100"
            android:progress="0"/>
    </LinearLayout>

    <Button
        android:id="@+id/btnPickFileFragment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Upload File"
        android:layout_gravity="end"
        android:layout_marginTop="8dp" />

</LinearLayout>
