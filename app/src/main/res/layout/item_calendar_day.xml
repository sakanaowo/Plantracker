<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" android:id="@+id/containerDay" android:layout_width="match_parent" android:layout_height="48dp" android:layout_margin="2dp" android:clickable="true" android:focusable="true">

    <LinearLayout android:layout_width="match_parent" android:layout_height="match_parent" android:orientation="vertical" android:gravity="center">

        <!-- Day Number -->
        <TextView android:id="@+id/tvDayNumber" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="15" android:textSize="16sp" android:textColor="@android:color/black" android:gravity="center"/>

        <!-- Event Indicator Dot -->
        <View android:id="@+id/dotIndicator" android:layout_width="6dp" android:layout_height="6dp" android:layout_marginTop="2dp" android:background="@drawable/bg_event_dot" android:visibility="gone"/>
    </LinearLayout>
</FrameLayout>
