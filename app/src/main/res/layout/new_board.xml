<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <!-- Top bar -->
    <LinearLayout
        android:id="@+id/topBar"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="#F8F8F8"
        android:paddingHorizontal="12dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageButton
            android:id="@+id/btnClose"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_close"
            app:tint="@android:color/black" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Board"
            android:textColor="@android:color/black"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/btnCreate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Create"
            android:textColor="#1976D2"
            android:textStyle="bold" />
    </LinearLayout>

    <!-- Board name input -->
    <EditText
        android:id="@+id/edtBoardName"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:hint="New Board"
        android:paddingHorizontal="16dp"
        android:background="@android:color/transparent"
        android:layout_marginTop="8dp"
        android:inputType="textCapSentences"
        android:textSize="16sp"
        android:backgroundTint="@android:color/darker_gray"
        app:layout_constraintTop_toBottomOf="@id/topBar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Item: Workspace -->
    <LinearLayout
        android:id="@+id/itemWorkspace"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="#F8F8F8"
        android:paddingHorizontal="16dp"
        app:layout_constraintTop_toBottomOf="@id/edtBoardName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Workspace"
            android:textColor="@android:color/black"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tvWorkspace"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Workspace name"
            android:textColor="#808080"
            android:textSize="14sp" />

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/right_arrow_icon"
            android:layout_marginStart="8dp"
            app:tint="#808080" />
    </LinearLayout>

    <!-- Item: Visibility -->
    <LinearLayout
        android:id="@+id/itemVisibility"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="#F8F8F8"
        android:paddingHorizontal="16dp"
        app:layout_constraintTop_toBottomOf="@id/itemWorkspace"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Visibility"
            android:textColor="@android:color/black"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tvVisibility"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Workspace visibility"
            android:textColor="#808080"
            android:textSize="14sp" />

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/right_arrow_icon"
            android:layout_marginStart="8dp"
            app:tint="#808080" />
    </LinearLayout>

    <!-- Item: Background -->
    <LinearLayout
        android:id="@+id/itemBackground"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="#F8F8F8"
        android:paddingHorizontal="16dp"
        app:layout_constraintTop_toBottomOf="@id/itemVisibility"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Background"
            android:textColor="@android:color/black"
            android:textSize="16sp" />

        <View
            android:id="@+id/colorPreview"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="#1976D2"
            android:layout_marginEnd="8dp"
            android:backgroundTintMode="src_in"
            android:backgroundTint="#1976D2"
            android:layout_marginStart="8dp"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
