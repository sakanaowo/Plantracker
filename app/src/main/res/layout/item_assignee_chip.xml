<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="wrap_content" android:layout_height="wrap_content" android:orientation="horizontal" android:gravity="center_vertical" android:background="@drawable/rounded_section_light" android:paddingStart="4dp" android:paddingEnd="8dp" android:paddingTop="4dp" android:paddingBottom="4dp" android:layout_marginEnd="8dp">

    <TextView android:id="@+id/tvAssigneeInitials" android:layout_width="28dp" android:layout_height="28dp" android:gravity="center" android:text="AB" android:textSize="12sp" android:textColor="#FFFFFF" android:textStyle="bold" android:background="@drawable/circle_green"/>

    <TextView android:id="@+id/tvAssigneeName" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Assignee Name" android:textSize="13sp" android:textColor="#212121" android:layout_marginStart="8dp" android:maxWidth="120dp" android:maxLines="1" android:ellipsize="end"/>

    <ImageView android:id="@+id/ivRemoveAssignee" android:layout_width="18dp" android:layout_height="18dp" android:src="@drawable/ic_close" app:tint="#999999" android:layout_marginStart="6dp" android:contentDescription="Remove assignee" android:background="?attr/selectableItemBackgroundBorderless"/>

</LinearLayout>
