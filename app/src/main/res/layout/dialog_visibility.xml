<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="24dp"
    android:background="@android:color/white">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Visibility"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        android:layout_marginBottom="16dp"/>

    <!-- Private Option -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardPrivate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:clickable="true"
        android:focusable="true"
        app:cardElevation="0dp"
        app:strokeWidth="1dp"
        app:strokeColor="#DFE1E6"
        app:cardCornerRadius="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <RadioButton
                    android:id="@+id/rbPrivate"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Private"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="#172B4D"
                    android:clickable="false"
                    android:focusable="false"/>
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="The board is private. Only people added to the board can view and edit it."
                android:textSize="12sp"
                android:textColor="#5E6C84"/>
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <!-- Workspace Option -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardWorkspace"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:clickable="true"
        android:focusable="true"
        app:cardElevation="0dp"
        app:strokeWidth="2dp"
        app:strokeColor="#0079BF"
        app:cardCornerRadius="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <RadioButton
                    android:id="@+id/rbWorkspace"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Workspace"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="#172B4D"
                    android:checked="true"
                    android:clickable="false"
                    android:focusable="false"/>
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Anyone at TI Ks's Workspace can see this board."
                android:textSize="12sp"
                android:textColor="#5E6C84"/>
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <!-- Public Option -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardPublic"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:clickable="true"
        android:focusable="true"
        app:cardElevation="0dp"
        app:strokeWidth="1dp"
        app:strokeColor="#DFE1E6"
        app:cardCornerRadius="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <RadioButton
                    android:id="@+id/rbPublic"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Public"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="#172B4D"
                    android:clickable="false"
                    android:focusable="false"/>
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="The board is public. It's visible to anyone with the link and will show up in search engines like Google. Only people added to the board can edit it."
                android:textSize="12sp"
                android:textColor="#5E6C84"/>
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <!-- Save Button -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnSaveVisibility"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginTop="8dp"
        android:text="Save"
        android:textAllCaps="false"
        android:textSize="14sp"
        android:textColor="@android:color/white"
        app:cornerRadius="3dp"
        app:backgroundTint="#0079BF"
        style="@style/Widget.Material3.Button"/>

</LinearLayout>