<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="320dp" android:layout_height="wrap_content" android:orientation="vertical" android:padding="20dp" android:background="@drawable/dialog_background">

    <!-- Icon -->
    <ImageView android:layout_width="64dp" android:layout_height="64dp" android:layout_gravity="center_horizontal" android:layout_marginBottom="12dp" android:src="@drawable/ic_calendar" android:tint="@color/primary" android:contentDescription="Calendar icon" />

    <!-- Title -->
    <TextView android:layout_width="match_parent" android:layout_height="wrap_content" android:text="Sync with" android:textSize="18sp" android:textStyle="bold" android:textColor="@color/on_surface" android:gravity="center" android:layout_marginBottom="2dp" />

    <TextView android:layout_width="match_parent" android:layout_height="wrap_content" android:text="Google Calendar" android:textSize="16sp" android:textColor="@color/on_surface_variant" android:gravity="center" android:layout_marginBottom="12dp" />

    <!-- Description -->
    <TextView android:layout_width="match_parent" android:layout_height="wrap_content" android:text="Connect your Google Calendar" android:textSize="13sp" android:textColor="@color/on_surface_variant" android:gravity="center" android:layout_marginBottom="16dp" />

    <!-- Benefits List -->
    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="vertical" android:layout_marginBottom="20dp" android:paddingStart="8dp" android:paddingEnd="8dp">

        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="horizontal" android:layout_marginBottom="6dp" android:gravity="center_vertical">
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="✓" android:textSize="14sp" android:textColor="@color/primary" android:textStyle="bold" android:layout_marginEnd="10dp" android:minWidth="20dp" android:gravity="center" />
            <TextView android:layout_width="0dp" android:layout_weight="1" android:layout_height="wrap_content" android:text="Automatic task and event sync" android:textSize="13sp" android:textColor="@color/on_surface" />
        </LinearLayout>

        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="horizontal" android:layout_marginBottom="6dp" android:gravity="center_vertical">
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="✓" android:textSize="14sp" android:textColor="@color/primary" android:textStyle="bold" android:layout_marginEnd="10dp" android:minWidth="20dp" android:gravity="center" />
            <TextView android:layout_width="0dp" android:layout_weight="1" android:layout_height="wrap_content" android:text="View tasks in calendar" android:textSize="13sp" android:textColor="@color/on_surface" />
        </LinearLayout>

        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="horizontal" android:gravity="center_vertical">
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="✓" android:textSize="14sp" android:textColor="@color/primary" android:textStyle="bold" android:layout_marginEnd="10dp" android:minWidth="20dp" android:gravity="center" />
            <TextView android:layout_width="0dp" android:layout_weight="1" android:layout_height="wrap_content" android:text="Get reminders for important tasks" android:textSize="13sp" android:textColor="@color/on_surface" android:maxLines="2" android:ellipsize="end" />
        </LinearLayout>
    </LinearLayout>

    <!-- Connect Button -->
    <Button android:id="@+id/btnConnectNow" android:layout_width="match_parent" android:layout_height="50dp" android:text="Connect Now" android:textSize="15sp" android:textStyle="bold" android:textColor="@color/white" android:background="@drawable/button_primary" android:layout_marginBottom="10dp" android:textAllCaps="false" />

    <!-- Maybe Later Button -->
    <Button android:id="@+id/btnMaybeLater" android:layout_width="match_parent" android:layout_height="50dp" android:text="Maybe Later" android:textSize="15sp" android:textColor="@color/primary" android:background="@drawable/button_outlined" android:layout_marginBottom="8dp" android:textAllCaps="false" />

    <!-- Don't Ask Again -->
    <TextView android:id="@+id/btnDontAskAgain" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_gravity="center_horizontal" android:text="Don't ask again" android:textSize="13sp" android:textColor="@color/on_surface_variant" android:padding="8dp" android:clickable="true" android:focusable="true" android:background="?attr/selectableItemBackground" />

</LinearLayout>
