<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission
        android:name="android.permission.READ_EXTERNAL_STORAGE"
        android:maxSdkVersion="32" />
    <uses-permission android:name="android.permission.READ_MEDIA_IMAGES" />

    <uses-feature
        android:name="android.hardware.camera"
        android:required="false" />

    <application
        android:name=".App.App"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_security_config"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Tralalero"
        android:usesCleartextTraffic="true">

        <activity
            android:name=".feature.auth.ui.login.LoginActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MainActivity"
            android:exported="false" />
        <activity
            android:name=".feature.auth.ui.signup.SignupActivity"
            android:exported="false" />
        <activity
            android:name=".feature.auth.ui.forgot.ForgotPasswordActivity"
            android:exported="false" />
        <activity
            android:name=".feature.home.ui.Home.HomeActivity"
            android:exported="false" />
        <activity
            android:name=".feature.home.ui.AccountActivity"
            android:exported="false" />
        <activity
            android:name=".feature.home.ui.EditProfileActivity"
            android:exported="false" />
        <activity
            android:name=".feature.home.ui.InboxActivity"
            android:exported="false" />
        <activity
            android:name=".feature.home.ui.ActivityActivity"
            android:exported="false" />
        <activity
            android:name=".feature.home.ui.NewBoard"
            android:exported="false" />
        <activity
            android:name=".feature.auth.ui.login.ContinueWithGoogle"
            android:exported="false" />
        <activity
            android:name=".feature.home.ui.Home.WorkspaceActivity"
            android:exported="false" />
        <activity
            android:name=".feature.home.ui.Home.ProjectActivity"
            android:exported="false" />
        <activity
            android:name=".feature.home.ui.Home.project.AboutBoardActivity"
            android:exported="false"
            android:label="About this board" />
        <activity
            android:name=".feature.home.ui.Home.project.CardDetailActivity"
            android:exported="false"
            android:label="Task Details" />
        <activity
            android:name=".feature.home.ui.ActivityTimer"
            android:exported="false" />
        <activity
            android:name=".feature.home.ui.SettingsActivity"
            android:theme="@style/Theme.Tralalero" />

        <activity
            android:name=".test.RepositoryTestActivity"
            android:exported="false"
            android:label="Repository Test" />

        <provider
            android:name="androidx.core.content.FileProvider"
            android:authorities="${applicationId}.fileprovider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/file_paths" />
        </provider>

    </application>

</manifest>
