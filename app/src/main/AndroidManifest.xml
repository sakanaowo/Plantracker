<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" android:maxSdkVersion="32" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" android:maxSdkVersion="28" />
    <uses-permission android:name="android.permission.READ_MEDIA_IMAGES" />

    <!-- FCM Permissions -->
    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />
    <uses-permission android:name="android.permission.VIBRATE" />

    <uses-feature android:name="android.hardware.camera" android:required="false" />

    <application android:name=".App.App" android:allowBackup="true" android:dataExtractionRules="@xml/data_extraction_rules" android:fullBackupContent="@xml/backup_rules" android:icon="@mipmap/ic_launcher" android:label="@string/app_name" android:networkSecurityConfig="@xml/network_security_config" android:roundIcon="@mipmap/ic_launcher_round" android:supportsRtl="true" android:theme="@style/Theme.Tralalero" android:usesCleartextTraffic="true">

        <activity android:name=".feature.auth.ui.login.LoginActivity" android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".MainActivity" android:exported="false" />
        <activity android:name=".feature.auth.ui.signup.SignupActivity" android:exported="false" />
        <activity android:name=".feature.auth.ui.forgot.ForgotPasswordActivity" android:exported="false" />
        <activity android:name=".feature.home.ui.Home.HomeActivity" android:exported="false" />
        <activity android:name=".feature.home.ui.AccountActivity" android:exported="false" />
        <activity android:name=".feature.home.ui.EditProfileActivity" android:exported="false" />
        <activity android:name=".feature.home.ui.InboxActivity" android:exported="false" />
        <activity android:name=".feature.home.ui.ActivityActivity" android:exported="false" />
        <activity android:name=".feature.home.ui.NewBoard" android:exported="false" />
        <activity android:name=".feature.auth.ui.login.ContinueWithGoogle" android:exported="false" />
        <activity android:name=".feature.home.ui.Home.WorkspaceActivity" android:exported="false" />
        <activity android:name=".feature.home.ui.Home.ProjectActivity" android:exported="false" />
        <activity android:name=".feature.home.ui.Home.project.AboutBoardActivity" android:exported="false" android:label="About this board" />
        <activity android:name=".feature.home.ui.Home.project.CardDetailActivity" android:exported="false" android:label="Task Details" />
        <activity android:name=".feature.home.ui.ActivityTimer" android:exported="false" />
        <activity android:name=".feature.home.ui.SettingsActivity" android:theme="@style/Theme.Tralalero" />

        <!-- Google Calendar OAuth Callback -->
        <activity android:name=".feature.home.ui.GoogleCalendarCallbackActivity" android:exported="true" android:launchMode="singleTask">
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <!-- Deep link: plantracker://calendar/connected -->
                <data android:scheme="plantracker" android:host="calendar" android:pathPrefix="/connected" />
            </intent-filter>
        </activity>

        <activity android:name=".feature.invitations.InvitationsActivity" android:exported="false" android:label="Invitations" />

        <activity android:name=".test.RepositoryTestActivity" android:exported="false" android:label="Repository Test" />

        <provider android:name="androidx.core.content.FileProvider" android:authorities="${applicationId}.fileprovider" android:exported="false" android:grantUriPermissions="true">
            <meta-data android:name="android.support.FILE_PROVIDER_PATHS" android:resource="@xml/file_paths" />
        </provider>

        <!-- FCM Service -->
        <service android:name=".service.MyFirebaseMessagingService" android:exported="false">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>

        <!-- FCM Metadata -->
        <meta-data android:name="com.google.firebase.messaging.default_notification_icon" android:resource="@drawable/ic_notification" />
        <meta-data android:name="com.google.firebase.messaging.default_notification_color" android:resource="@color/primary" />
        <meta-data android:name="firebase_messaging_auto_init_enabled" android:value="true" />
        <meta-data android:name="firebase_analytics_collection_enabled" android:value="true" />

    </application>

</manifest>
